include mixins.jade

doctype html
html(lang="ru")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible", content="ie=edge")
		title Chukfamily
		+styles('css/normalize.css', 'css/slick.css', 'css/jquery.fancybox.css', 'css/chukfamily.css')
	body
		.main-content
			header
				.header-inner
					.logo
						a(href="index.html")
							img(src="img/logo.svg", alt="")
					nav.main-menu
						.mobile-menu
						.menu-block
							.search.search--mobile
								form(action="")
									input(type="search" name="" placeholder="Поиск по сайту")
							ul.first-menu
								li
									a(href="index.html") Главная
								li.js-menu
									span Chukfamily
									ul.second-menu
										li
											a(href="author-page.html") Корней Чуковский
										li
											a(href="") Лидия Чуковская
										li
											a(href="") Елена Чуковская
										li
											a(href="") Николай Чуковский
								li.js-menu
									span За сценой
									ul.second-menu
										li
											a(href="scene-page.html") Александр Герцен
										li
											a(href="scene-page.html") Борис Житков
										li
											a(href="scene-page.html") Фрида Вигдорова
										li
											a(href="scene-page.html") Уолт Уитмен
										li
											a(href="scene-page.html") Тамара Габбе
								li
									a(href="gallery.html") Галерея
								li
									a(href="events.html") Мероприятия
								li.js-menu
									span О проекте
									ul.second-menu
										li
											a(href="about.html") О проекте
										li
											a(href="feedback.html") Связь
										li
											a(href="friends.html") Друзья сайта
										li
											a(href="thanks.html") Благодарности
							.subscribe.subscribe--mobile
								p Подписка
								form(action="")
									input(type="email" placeholder="Ваш e-mail")
									button(type="submit" value="")
					.search.search--desktop
						form(action="")
							input(type="search" name="" placeholder="Поиск по сайту")
		
			main
				.wrapper 
					block content 
		
		footer 
			.footer-inner
				.logo
					a(href="") 
						img(src="img/logo.svg", alt="")
					p &copy; 2016 Все права защищены
				.footer-right
					.soc-icons
						a(href="").soc-icons__item.soc-icons--vk
						a(href="").soc-icons__item.soc-icons--tw
						a(href="").soc-icons__item.soc-icons--fb
					.subscribe.subscribe--desktop
						p Подписка
						form(action="")
							input(type="email" placeholder="Ваш e-mail")
							button(type="submit" value="")
		.hidden
			#inline.audio-popup
				h2 Горький и детская литература
				.audio-info
					p.source Независимая газета / 1964 год
					p.audio-author Читает: Иван Иванов
				audio(controls)
					source(src="audio/julia.ogg" type="audio/ogg; codecs=vorbis")
					source(src="http://www.chukfamily.ru/Sounds/julia.mp3")
					| Тег audio не поддерживается вашим браузером. 
					a(href="http://www.chukfamily.ru/Sounds/julia.mp3") Скачать

	+scripts('https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js', 'js/device.min.js', 'js/jquery.fancybox.pack.js', 'js/jquery.mousewheel-3.0.6.pack.js', 'js/jquery.touchSwipe.js', 'js/slick.min.js', 'js/chukfamily.js')
